rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /appointments/{document} {
      allow create: if request.auth.uid == request.resource.data.appointmentName;
      allow read: if request.auth.uid == resource.data.appointmentName;
      allow write: if false;
      allow delete: if false;
    }

    match /podcast/{document} {
      allow create: if request.resource.data.Person == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if resource.data.Person == /databases/$(database)/documents/users/$(request.auth.uid);
      allow write: if false;
      allow delete: if false;
    }

    match /video/{document} {
      allow create: if false;
      allow read: if false;
      allow write: if false;
      allow delete: if false;
    }

    match /authors/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
  }
}
